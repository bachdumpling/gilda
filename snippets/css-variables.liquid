{% style %}
  /* DM Sans font faces */
  @font-face {
    font-family: "DM Sans";
    src: url("{{ 'DMSans-VariableFont.ttf' | asset_url }}") format("truetype-variations");
    font-weight: 100 1000;
    font-style: normal;
    font-display: swap;
  }

  @font-face {
    font-family: "DM Sans";
    src: url("{{ 'DMSans-Italic-VariableFont.ttf' | asset_url }}") format("truetype-variations");
    font-weight: 100 1000;
    font-style: italic;
    font-display: swap;
  }

  /* DM Mono font faces */
  @font-face {
    font-family: "DM Mono";
    src: url("{{ 'DMMono-Light.ttf' | asset_url }}") format("truetype");
    font-weight: 300;
    font-style: normal;
    font-display: swap;
  }

  @font-face {
    font-family: "DM Mono";
    src: url("{{ 'DMMono-LightItalic.ttf' | asset_url }}") format("truetype");
    font-weight: 300;
    font-style: italic;
    font-display: swap;
  }

  @font-face {
    font-family: "DM Mono";
    src: url("{{ 'DMMono-Regular.ttf' | asset_url }}") format("truetype");
    font-weight: 400;
    font-style: normal;
    font-display: swap;
  }

  @font-face {
    font-family: "DM Mono";
    src: url("{{ 'DMMono-Italic.ttf' | asset_url }}") format("truetype");
    font-weight: 400;
    font-style: italic;
    font-display: swap;
  }

  @font-face {
    font-family: "DM Mono";
    src: url("{{ 'DMMono-Medium.ttf' | asset_url }}") format("truetype");
    font-weight: 500;
    font-style: normal;
    font-display: swap;
  }

  @font-face {
    font-family: "DM Mono";
    src: url("{{ 'DMMono-MediumItalic.ttf' | asset_url }}") format("truetype");
    font-weight: 500;
    font-style: italic;
    font-display: swap;
  }

  :root {
    --color-background: #F2EFED;
    --color-foreground: #000000;
    --color-title: #252525;
    --color-subtitle: #333333;
    --font-family-sans: "DM Sans", ui-sans-serif, system-ui, sans-serif;
    --font-family-mono: "DM Mono", ui-monospace, SFMono-Regular, Menlo, Monaco, Consolas, "Liberation Mono", "Courier New", monospace;
    --style-border-radius-inputs: 0px;
  }

  body {
    display: flex;
    flex-direction: column;
    min-height: 100svh;
    background-color: var(--color-background);
    color: var(--color-foreground);
  }

  /* Prevent scrolling when cart is open (especially important for mobile) */
  body.cart-open {
    overflow: hidden;
    position: fixed;
    width: 100%;
    left: 0;
    right: 0;
  }

  html:has(dialog[scroll-lock][open], details[scroll-lock][open]) {
    overflow: hidden;
  }

  img,
  picture,
  video,
  canvas,
  svg {
    display: block;
    max-width: 100%;
    height: auto;
  }

  input,
  textarea,
  select {
    font: inherit;
    border-radius: var(--style-border-radius-inputs);
  }

  select {
    background-color: var(--color-background);
    color: currentcolor;
  }

  dialog {
    background-color: var(--color-background);
    color: var(--color-foreground);
  }

  p {
    text-wrap: pretty;
  }

  p,
  h1,
  h2,
  h3,
  h4,
  h5,
  h6 {
    overflow-wrap: break-word;
  }

  p:empty {
    display: none;
  }

  :is(p, h1, h2, h3, h4, h5, h6):first-child,
  :empty:first-child + :where(p, h1, h2, h3, h4, h5, h6) {
    margin-block-start: 0;
  }

  :is(p, h1, h2, h3, h4, h5, h6):last-child,
  :where(p, h1, h2, h3, h4, h5, h6) + :has(+ :empty:last-child) {
    margin-block-end: 0;
  }
{% endstyle %}
