{% style %}
  {% # DM Sans Variable Font from CDN %}
  @font-face {
    font-family: 'DM Sans';
    src: url('https://cdn.shopify.com/s/files/1/0670/9051/4081/files/DMSans-VariableFont_opsz_wght.woff?v=1758746089') format('woff');
    font-weight: 100 900;
    font-style: normal;
    font-display: swap;
    font-variation-settings: "opsz" 9, "wght" 400;
  }

  @font-face {
    font-family: 'DM Sans';
    src: url('https://cdn.shopify.com/s/files/1/0670/9051/4081/files/DMSans-Italic-VariableFont_opsz_wght.woff?v=1758746089') format('woff');
    font-weight: 100 900;
    font-style: italic;
    font-display: swap;
    font-variation-settings: "opsz" 9, "wght" 400;
  }

  :root {
    --font-primary--family: 'DM Sans', -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Helvetica, Arial, sans-serif;
    --font-sans: 'DM Sans', ui-sans-serif, system-ui, -apple-system, 'SF Pro Text', 'Segoe UI', Roboto, Helvetica, Arial, 'Apple Color Emoji', 'Segoe UI Emoji';
    --color-background: #F2EFED;
    --color-foreground: #000000;
    --style-border-radius-inputs: 0px;
  }
{% endstyle %}
