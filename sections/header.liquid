<header class="h-20 flex items-center justify-between px-4 py-2 sm:px-10">
  <!-- Mobile menu button (visible on small screens) -->
  <div class="sm:hidden">
    <a href="#footer" class="text-black no-underline text-sm md:text-base uppercase">
      Menu
    </a>
  </div>

  <!-- Logo (centered on mobile, left on desktop) -->
  <h2 class="text-2xl uppercase">
    {{ shop.name | link_to: routes.root_url, class: "text-black no-underline" }}
  </h2>

  <!-- Desktop navigation (hidden on mobile) -->
  <nav class="hidden sm:flex gap-8">
    {% for link in section.settings.menu.links %}
      {{ link.title | link_to: link.url, class: "text-black no-underline text-sm uppercase" }}
    {% endfor %}
  </nav>

  <!-- Cart link -->
  <div class="flex items-center">
    <button 
      type="button" 
      class="text-black no-underline text-sm md:text-base uppercase cursor-pointer hover:opacity-70 transition-opacity"
      data-cart-open
    >
      {% if cart.item_count > 0 %}
        Cart({{ cart.item_count }})
      {% else %}
        Cart
      {% endif %}
    </button>
  </div>
</header>

<!-- Include Cart Sidebar -->
{% render 'cart-sidebar' %}


{% schema %}
  {
    "name": "t:general.header",
    "settings": [
      {
        "type": "link_list",
        "id": "menu",
        "label": "t:labels.menu"
      }
    ]
  }
{% endschema %}