{% # Home test section: pulls products from a collection and shows a 2x2 grid %}
{% liquid
  assign chosen_collection = section.settings.collection | default: collections['all']
%}

<section class="">
  <div class="grid grid-cols-1 md:grid-cols-2 border-black">
    {% for product in chosen_collection.products limit: 4 %}
      <div class=" border-b border-black">
        {% if product.featured_image %}
          {% render 'image' 
            , image: product.featured_image
            , width: 1200 %}
        {% else %}
          {{ 'image' | placeholder_svg_tag }}
        {% endif %}
        <div class="px-4 py-3 text-[10px] md:text-xs tracking-widest text-center">{{ product.title | escape }}</div>
      </div>
    {% else %}
      <div class="col-span-2 py-12 text-center text-xs opacity-70">No products found.</div>
    {% endfor %}
  </div>
</section>

{% schema %}
  {
    "name": "Home",
    "settings": [
      {
        "type": "collection",
        "id": "collection",
        "label": "Collection"
      }
    ],
    "presets": [
      {
        "name": "Home"
      }
    ]
  }
{% endschema %}