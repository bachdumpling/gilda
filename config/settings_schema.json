[
  {
    "name": "theme_info",
    "theme_name": "Gilda",
    "theme_version": "0.1.0",
    "theme_author": "Shopify",
    "theme_documentation_url": "https://help.shopify.com/manual/online-store/themes",
    "theme_support_url": "https://support.shopify.com/"
  },
  {
    "name": "t:general.typography",
    "settings": [
      {
        "type": "header",
        "content": "Font Family"
      },
      {
        "type": "paragraph",
        "content": "This theme uses DM Sans as the primary font family with multiple weights (Thin, ExtraLight, Light, Regular, Medium, SemiBold, Bold, ExtraBold, Black) and includes italic variants for each weight."
      }
    ]
  },
  {
    "name": "t:general.layout",
    "settings": [
      {
        "type": "select",
        "id": "max_page_width",
        "label": "t:labels.page_width",
        "options": [
          {
            "value": "90rem",
            "label": "t:options.page_width.narrow"
          },
          {
            "value": "110rem",
            "label": "t:options.page_width.wide"
          }
        ],
        "default": "90rem"
      },
      {
        "type": "range",
        "id": "min_page_margin",
        "min": 10,
        "max": 100,
        "step": 1,
        "unit": "px",
        "label": "t:labels.page_margin",
        "default": 20
      }
    ]
  },
  {
    "name": "t:general.colors",
    "settings": [
      {
        "type": "color",
        "id": "background_color",
        "default": "#F2EFED",
        "label": "t:labels.background"
      },
      {
        "type": "color",
        "id": "foreground_color",
        "default": "#333333",
        "label": "t:labels.foreground"
      },
      {
        "type": "range",
        "id": "input_corner_radius",
        "min": 0,
        "max": 10,
        "step": 1,
        "unit": "px",
        "label": "t:labels.input_corner_radius",
        "default": 4
      }
    ]
  },
  {
    "name": "Favicon & SEO",
    "settings": [
      {
        "type": "header",
        "content": "Favicon"
      },
      {
        "type": "image_picker",
        "id": "favicon",
        "label": "Favicon image",
        "info": "Recommended: 32x32px or 180x180px PNG file"
      },
      {
        "type": "header",
        "content": "Social sharing image"
      },
      {
        "type": "image_picker",
        "id": "share_image",
        "label": "Default social sharing image",
        "info": "Recommended: 1200x630px JPG or PNG for Facebook/Twitter sharing. Used when pages don't have their own image."
      },
      {
        "type": "header",
        "content": "SEO defaults"
      },
      {
        "type": "text",
        "id": "seo_site_name",
        "label": "Site name",
        "info": "Override the shop name for SEO purposes",
        "placeholder": "Leave blank to use shop name"
      },
      {
        "type": "textarea",
        "id": "seo_default_description",
        "label": "Default meta description",
        "info": "Used when pages don't have their own description. Max 155 characters recommended.",
        "placeholder": "Describe your store..."
      },
      {
        "type": "header",
        "content": "Business location & contact"
      },
      {
        "type": "text",
        "id": "seo_business_city",
        "label": "Primary city",
        "info": "Primary business location (e.g., New York City, Tokyo)",
        "placeholder": "New York City"
      },
      {
        "type": "text",
        "id": "seo_business_state",
        "label": "State/Province",
        "info": "State or province (e.g., NY, Tokyo)",
        "placeholder": "NY"
      },
      {
        "type": "text",
        "id": "seo_business_country",
        "label": "Country",
        "info": "Country code (e.g., US, JP)",
        "placeholder": "US"
      },
      {
        "type": "url",
        "id": "seo_business_website",
        "label": "Website URL",
        "info": "Full website URL (e.g., https://gildaclothing.com)"
      },
      {
        "type": "text",
        "id": "seo_business_email",
        "label": "Business email",
        "info": "Contact email address"
      },
      {
        "type": "text",
        "id": "seo_business_phone",
        "label": "Business phone",
        "info": "Contact phone number (include country code)"
      },
      {
        "type": "text",
        "id": "seo_additional_locations",
        "label": "Additional locations",
        "info": "Comma-separated list of additional locations (e.g., Japan, NYC)",
        "placeholder": "Japan, NYC"
      }
    ]
  }
